					"waitOnCompletion": true
				}
			},
			{
				"name": "ExecuteAzureSQLPipeline",
				"type": "ExecutePipeline",
				"dependsOn": [
					{
						"activity": "ExecuteAPIPipeline",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
